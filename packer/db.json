{
  "variables": {
    "project_id": null,
    "source_image_family": null,
    "machine_type": "f1-micro"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "image_name": "reddit-db-base-{{timestamp}}",
      "image_family": "reddit-db-base",
      "image_description": "Ubuntu 16.04 MongoDB image for reddit-app",
      "source_image_family": "{{user `source_image_family`}}",
      "zone": "europe-west4-a",
      "ssh_username": "appuser",
      "machine_type": "{{user `machine_type`}}",
      "disk_size": "10",
      "disk_type": "pd-standard",
      "network": "default"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install_mongodb.sh",
      "execute_command": "sudo {{.Path}}"
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p /tmp/tests/spec/localhost/"
      ]
    },
    {
      "destination": "/tmp/tests/",
      "source": "serverspec/Rakefile",
      "type": "file"
    },
    {
      "destination": "/tmp/tests/spec/",
      "source": "serverspec/spec/spec_helper.rb",
      "type": "file"
    },
    {
      "destination": "/tmp/tests/spec/localhost/",
      "source": "serverspec/spec/localhost/mongodb_spec.rb",
      "type": "file"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get -y install ruby-full",
        "gem install serverspec rake"
      ],
      "execute_command": "sudo {{.Path}}"
    },
    {
      "type": "shell",
      "inline": [
        "cd /tmp/tests && rake spec:localhost",
        "rake spec:localhost"
      ]
    }
  ]
}
